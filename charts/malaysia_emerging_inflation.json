{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Malaysia vs Emerging Markets Inflation Comparison (1980-2030)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "data/malaysia_emergingmarket.csv"
  },
  "transform": [
    {"fold": ["1980", "1981", "1982", "1983", "1984", "1985", "1986", "1987", "1988", "1989", "1990", "1991", "1992", "1993", "1994", "1995", "1996", "1997", "1998", "1999", "2000", "2001", "2002", "2003", "2004", "2005", "2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023", "2024", "2025", "2026", "2027", "2028", "2029", "2030"], "as": ["Year", "Inflation"]},
    {"calculate": "datum.Year", "as": "Year"},
    {"calculate": "datum.Inflation", "as": "Inflation"},
    {"filter": "datum.Inflation != null"}
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "strokeDash": [0, 0]
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "scale": {"domain": ["1980", "1985", "1990", "1995", "2000", "2005", "2010", "2015", "2020", "2025", "2030"]}
        },
        "y": {
          "field": "Inflation",
          "type": "quantitative",
          "title": "Annual percent change",
          "scale": {"domain": [0, 150]}
        },
        "color": {
          "field": "Inflation rate, average consumer prices (Annual percent change)",
          "type": "nominal",
          "scale": {
            "domain": ["Malaysia", "Emerging market and developing economies"],
            "range": ["#2E8B57", "#DC143C"]
          },
          "title": null
        },
        "strokeDash": {
          "condition": {
            "test": "datum.Year >= '2025'",
            "value": [5, 5]
          },
          "value": [0, 0]
        }
      }
    },
    {
      "mark": {
        "type": "rule",
        "stroke": "#87CEEB",
        "strokeWidth": 1,
        "opacity": 0.7
      },
      "encoding": {
        "x": {"datum": "2025"}
      }
    }
  ],
  "config": {
    "title": {"fontSize": 18, "fontWeight": "bold"},
    "legend": {"labelFontSize": 12, "titleFontSize": 13},
    "view": {"stroke": "transparent"},
    "axis": {"grid": true, "labelFontSize": 11}
  }
}
